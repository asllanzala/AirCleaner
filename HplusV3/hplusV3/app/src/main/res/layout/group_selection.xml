<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="visible">

    <RelativeLayout
        android:id="@+id/selection_layout"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/transparent"
            android:textColor="@drawable/all_device_selection_color"
            android:textSize="14sp"
            android:text="@string/selection_group"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/group_btn"
            android:layout_toEndOf="@id/group_btn"
            android:src="@drawable/all_device_selection_line"/>

        <Button
            android:id="@+id/default_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line1"
            android:layout_toEndOf="@id/line1"
            android:padding="5dp"
            android:background="@color/transparent"
            android:textColor="@drawable/all_device_selection_color"
            android:textSize="14sp"
            android:text="@string/selection_default"/>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/default_btn"
            android:layout_toEndOf="@id/default_btn"
            android:src="@drawable/all_device_selection_line"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line2"
            android:layout_toEndOf="@id/line2"
            android:padding="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:background="@color/transparent"
            android:textColor="@drawable/all_device_selection_color"
            android:textSize="14sp"
            android:text="@string/selection_delete"/>

    </RelativeLayout>
</RelativeLayout>