<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/enroll_choose_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:id="@+id/enroll_choose_back_layout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:paddingTop="15dp"
            android:onClick="doClick">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_icon" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/enroll_choose_tv_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enroll_choose_back_layout"
            android:layout_marginEnd="30dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dip"
            android:layout_marginStart="20dp"
            >

            <TextView
                android:id="@+id/enroll_choose_please_tv_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/enroll_page1_title"
                android:textSize="24sp" />


        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/enroll_choose_machine_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enroll_choose_nextBtn"
        android:layout_below="@+id/enroll_choose_title_id"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/machine_black" />

    <Button
        android:id="@+id/enroll_choose_nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/enroll_next_button"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:onClick="doClick"
        android:text="@string/samart_next_btn"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>