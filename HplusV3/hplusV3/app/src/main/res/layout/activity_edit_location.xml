<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/setting_bg">

    <LinearLayout
        android:id="@+id/edit_home_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@color/title_bar_bg"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/edit_home_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/back"/>

        </FrameLayout>

        <TextView
            android:id="@+id/edit_home_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/edit_places"
            android:textColor="@color/enroll_grey"
            android:textSize="18sp"/>

        <FrameLayout
            android:id="@+id/add_home_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/add_home_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location_add_device"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_home_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_home_title_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_place_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="@string/my_places"
            android:textSize="16sp"
            android:textColor="@color/my_place_text"/>

        <ListView
            android:id="@+id/edit_home_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/edit_home_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/enroll_next_button"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/edit_home_button_gap"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/edit_home_button_left"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/enroll_next_button"
        android:layout_toLeftOf="@id/edit_home_button_gap"
        android:layout_toStartOf="@id/edit_home_button_gap"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/edit_home_button_right"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/enroll_next_button"
        android:layout_toRightOf="@id/edit_home_button_gap"
        android:layout_toEndOf="@id/edit_home_button_gap"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"/>

</RelativeLayout>