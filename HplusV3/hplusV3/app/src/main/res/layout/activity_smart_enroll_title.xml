<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/enroll_back_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:onClick="doClick"
        android:paddingBottom="5dip"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon" />

    </FrameLayout>

    <TextView
        android:id="@+id/input_tip_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enroll_back_layout"
        android:layout_marginEnd="30dip"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dip"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:textColor="@color/enroll_page1_title"
        android:text="@string/scan_title"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_tip_id"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/input_tip_hint_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/enroll_page1_title"
            android:text="@string/smart_scan_hint"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>

