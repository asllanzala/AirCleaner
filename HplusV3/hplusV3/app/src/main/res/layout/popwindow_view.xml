<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent_70">

    <RelativeLayout
        android:id="@+id/popwindow_title"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginEnd="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/popwindow_particle_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="8dip"
            android:background="@color/emotion_popwindow_color"
            android:src="@drawable/icon_pahs_big"/>
        <TextView
            android:id="@+id/popwindow_titlename_text"
            android:layout_toRightOf="@id/popwindow_particle_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/particle_name_color"
            android:text="@string/paths_name"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/popwindow_dividing_line"
            android:layout_below="@id/popwindow_particle_img"
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popwindow_line"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/particle_orientation_text"
        android:layout_below="@id/popwindow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginEnd="10dip"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/particle_orientation_color"
        android:text="@string/paths_orientation"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:textSize="12sp"/>

</RelativeLayout>