<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/emotional_main_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/control_bg"
    android:baselineAligned="true"
    android:orientation="vertical">

    <com.honeywell.hch.airtouchv3.app.dashboard.controller.location.BlurBackgroundView
        android:id="@+id/home_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.honeywell.hch.airtouchv3.app.dashboard.controller.alldevice.control.CircleView
        android:id="@+id/group_mode_circle_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/whole_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/group_control_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/group_control_group_header_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/group_control_line_header" />

    <FrameLayout
        android:id="@+id/back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_device_back"/>

    </FrameLayout>

    <EditText
        android:id="@+id/group_control_group_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/group_name_bg"
        android:maxLength="14"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/group_control_group_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_control_group_header_line"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white_80"
        android:textSize="15dp" />

    <ScrollView
        android:id="@+id/group_control_group_status_layout_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/group_mode_circle_view">

        <LinearLayout
            android:id="@+id/group_control_group_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>