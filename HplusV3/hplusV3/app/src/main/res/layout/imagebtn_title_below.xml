<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:src="@drawable/cloudy_weather_icon" />

    <ImageView
        android:id="@+id/schedule_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:layout_toRightOf="@id/weather_icon"
        android:src="@drawable/schedule_icon" />

    <ImageView
        android:id="@+id/emotion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/schedule_icon"
        android:src="@drawable/emotion_icon" />

</RelativeLayout>


