<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/has_permission_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/enroll_page1_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/long_press_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enroll_long_press"
                    android:textColor="@color/enroll_blue2"
                    android:textSize="45sp"/>

                <TextView
                    android:id="@+id/title_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/long_press_tv"
                    android:layout_toEndOf="@id/long_press_tv"
                    android:layout_alignBottom="@id/long_press_tv"
                    android:text="@string/enroll_page1_title_line1"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/title_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_line1"
                    android:layout_marginTop="5dp"
                    android:text="@string/enroll_page1_title_line2"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/air_premium_welcome_layout_cn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/page2_title_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/page2_title_tv2"
                    android:text="按下空气净化器"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/page2_title_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/page2_title_tv1"
                    android:layout_toEndOf="@id/page2_title_tv1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="背后"
                    android:textColor="@color/enroll_blue2"
                    android:textSize="45sp"/>

                <ImageView
                    android:id="@+id/page2_title_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/air_touch_x_icon"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/page2_title_tv1"
                    android:layout_alignLeft="@id/page2_title_tv1"
                    android:layout_alignStart="@id/page2_title_tv1"/>

                <TextView
                    android:id="@+id/page1_title_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/page2_title_tv3"
                    android:layout_toEndOf="@id/page2_title_tv3"
                    android:layout_alignBottom="@id/page2_title_tv3"
                    android:text="按钮，直到听到提示音"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/air_premium_welcome_layout_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/page2_title_tv1_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/page2_title_tv3_en"
                    android:paddingBottom="5dp"
                    android:text="Press"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

                <ImageView
                    android:id="@+id/page2_title_iv_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/air_touch_x_icon"
                    android:layout_alignBottom="@+id/page2_title_tv3_en"
                    android:layout_toRightOf="@id/page2_title_tv1_en"
                    android:layout_toEndOf="@id/page2_title_tv1_en"/>

                <TextView
                    android:id="@+id/page2_title_tv2_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/page2_title_iv_en"
                    android:layout_toEndOf="@id/page2_title_iv_en"
                    android:layout_alignBottom="@+id/page2_title_tv3_en"
                    android:paddingBottom="5dp"
                    android:text="button at"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/page2_title_tv3_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/page2_title_tv2_en"
                    android:layout_toEndOf="@id/page2_title_tv2_en"
                    android:text="back"
                    android:textColor="@color/enroll_blue2"
                    android:textSize="45sp"/>

                <TextView
                    android:id="@+id/page1_title_tv3_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@id/page2_title_tv1_en"
                    android:layout_alignStart="@id/page2_title_tv1_en"
                    android:layout_below="@id/page2_title_tv1_en"
                    android:text="of Air Touch X"
                    android:textColor="@color/enroll_page1_title"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/from_conntect_timeout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dip"
                android:layout_marginStart="20dp"
                android:textColor="@color/enroll_page1_title"
                android:textSize="24sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/scanStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/enroll_scanning"
            android:textColor="@color/enroll_blue"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/loading_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/scanStatusTv"
            android:layout_toEndOf="@id/scanStatusTv"
            android:layout_alignBottom="@id/scanStatusTv"
            android:background="@drawable/loading_points"/>

        <ImageView
            android:id="@+id/machine_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scanStatusTv"
            android:layout_marginBottom="35dp"
            android:src="@drawable/machine_black"/>

        <ListView
            android:id="@+id/wifi_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_permission_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/no_permission_textview_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dip"
                android:layout_marginStart="20dp"
                android:textColor="@color/enroll_page1_title"
                android:textSize="24sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/go_to_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_view"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:textColor="@color/enroll_blue2"
            android:text="@string/go_to_setting"
            android:textSize="24sp"/>

    </RelativeLayout>

</RelativeLayout>