<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/login_checkbox_selector</item>
    </style>

    <style name="LedCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/led_checkbox_selector</item>
    </style>

    <style name="LedMinCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/led_min_checkbox_selector</item>
    </style>

    <style name="LedMaxCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/led_max_checkbox_selector</item>
    </style>

    <style name="PowerCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/power_checkbox_selector</item>
    </style>

    <style name="ModeCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@color/transparent</item>
    </style>

    <style name="text_17_000000">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/enroll_password_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorHintInverse</item>

    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorHintInverse</item>
    </style>
</resources>
